{
    "name": "PsychoXPath",
    "version": "1.0.10",
    "description": "Adds XPath support to the contextual menu, and XPath autocomplete-ish behaviour to the omnibar.",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "omnibox": {
        "keyword": "xpath"
    },
    "icons": {
        "16": "logo_16x16.png",
        "48": "logo_48x48.png",
        "128": "logo_128x128.png"
    },
    "background_page": "background.html",
    "content_scripts": [{
        "run_at": "document_end",
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "psychoxpath.js",
            "content.js"
         ],
         "css": [
            "content.css"
         ]
    }]
}
